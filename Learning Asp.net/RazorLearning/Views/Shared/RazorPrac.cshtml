@{
    var text = "";
    if (DateTime.Now.Hour > 4 && DateTime.Now.Hour < 12)
    {
        text = "Good Morning";
    }
    else if (DateTime.Now.Hour >= 12 && DateTime.Now.Hour < 18)
    {
        text = "Good Afternoon";
    }
    else
    {
        text = "Good Night";
    }
}
<p>@text</p> <!--This calls all those text strings so that it will print to the webpage-->
